<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_car_item_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/default_car" />

        <TextView
            android:id="@+id/user_car_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@id/user_car_item_image"
            android:textSize="18sp"
            android:textColor="@color/header_text_color"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/user_car_item_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make"
            android:layout_below="@id/user_car_item_name"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@id/user_car_item_name" />

        <TextView
            android:id="@+id/user_car_item_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:layout_below="@id/user_car_item_name"
            android:layout_toEndOf="@id/user_car_item_make"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>