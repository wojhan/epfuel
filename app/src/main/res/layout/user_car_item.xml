<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_car_item_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#c9c9c9" />

        <TextView
            android:id="@+id/user_car_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@id/user_car_item_image" />

        <TextView
            android:id="@+id/user_car_item_make"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make"
            android:layout_below="@id/user_car_item_name" />

        <TextView
            android:id="@+id/user_car_item_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:layout_below="@id/user_car_item_name"
            android:layout_toEndOf="@id/user_car_item_make"
            android:layout_marginLeft="6dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>