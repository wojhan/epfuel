<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/add_refuel_additional_info_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/add_refuel_gas_station_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_refuel_additional_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DODATKOWE" />

        <CheckBox
            android:id="@+id/add_refuel_additional_info_missed_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PominiÄ™to poprzednie tankowanie"
            android:layout_below="@id/add_refuel_additional_info_label" />

        <EditText
            android:id="@+id/add_refuel_additional_info_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Uwagi"
            android:layout_below="@id/add_refuel_additional_info_missed_last" />
    </RelativeLayout>

</android.support.v7.widget.CardView>